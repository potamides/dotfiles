#!/bin/bash
# shellcheck disable=SC2128

###############################################################################
#  Install essential packages. When this script is sourced instead of being   #
#  executed it only defines array variables with the packages that should be  #
#   installed, leaving the choice of package managers and flags to the user.  #
#                Optional Dependencies: sudo, pacman, yay, pip                #
###############################################################################

PKG=(
  awesome ranger neovim tmux ncmpcpp qpdfview mutt weechat conky when

  # used by mutt & weechat
  keepassxc

  # used by weechat
  python-websocket-client

  # used by neovim
  texlab pyright lua-language-server xclip

  # used by awesome
  xorg-xinit papirus-icon-theme physlock scrot firefox redshift mpv

  # used by awesome & conky
  xorg-xrandr

  # used by ranger
  ueberzug

  # used by bash
  bash-completion fzf ripgrep

  # terminal fonts
  adobe-source-code-pro-fonts ttf-nerd-fonts-symbols
)

AUR=(
  ptpython termite

  # used by conky
  absolutely-proprietary

  # used by mutt
  pandoc-bin mutt-ics

  # used by bash
  bash-complete-alias

  # used by awesome
  gtk-theme-arc-gruvbox-git qt5-styleplugins

  # used by ranger
  dragon-drag-and-drop
)

PIP=(
  # used by mutt
  pypandoc pynliner
)

# if this script is not sourced install packages
if [[ "$BASH_SOURCE" == "$0" ]]; then
  set -o errexit
  sudo pacman -S --needed "${PKG[@]}"
  yay -S --aur --needed --removemake "${AUR[@]}"
  pip install "${PIP[@]}" --user
fi
