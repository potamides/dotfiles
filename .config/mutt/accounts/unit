unalternates *
unmailboxes *
unmy_hdr *

# set smtp and imap stuff
set imap_user = "$my_unit_user"
set from      = "$my_unit_mail"
set imap_pass = "$my_unit_pass"
set smtp_pass = "$my_unit_pass"
set folder    = "imaps://exchange.uni-mannheim.de:993"
set smtp_url  = "smtp://$my_unit_user@exchange.uni-mannheim.de:587"
set smtp_authenticators = "login"

# specify some special mailboxes
set spoolfile = "+Inbox"
set postponed = "+Drafts"
set record    = "+Sent Items"
set trash     = "+Deleted Items"

# check these mailboxes for new messages periodically & display them in sidebar
mailboxes +Inbox "+Junk Email" +Drafts "+Sent Items" +Notes "+Deleted Items"

# vim: filetype=muttrc
